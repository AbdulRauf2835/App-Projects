import 'package:flutter/material.dart';
import 'package:flutter/widgets.dart';

void main() {
  runApp(const MyApp());
}

class MyApp extends StatelessWidget {
  const MyApp({super.key});

  // This widget is the root of your application.
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Flutter Demo',
      debugShowCheckedModeBanner: false,
      theme: ThemeData(

        colorScheme: ColorScheme.fromSeed(seedColor: Colors.deepPurple),
        useMaterial3: true,
      ),
      home: const MyHomePage(title: 'BMI APP'),
    );
  }
}

class MyHomePage extends StatefulWidget {
  const MyHomePage({super.key, required this.title});




  final String title;

  @override
  State<MyHomePage> createState() => _MyHomePageState();
}

class _MyHomePageState extends State<MyHomePage> {
  int _counter = 0;
  var wtcontroller=TextEditingController();
  var hfcontroller=TextEditingController();
  var hicontroller=TextEditingController();
  var result="";
  var bgColor;
  void _incrementCounter() {
    setState(() {


      _counter++;
    });
  }

  @override
  Widget build(BuildContext context) {

    return Scaffold(
      appBar: AppBar(

        backgroundColor: Theme.of(context).colorScheme.inversePrimary,

        title: Text(widget.title),
      ),
      body:Container(
        color: bgColor,
        child: Center(
          child: Container(
            width: 350,

            child: ListView(


              children: [
                Align(alignment: Alignment.center,
                    child: Text("BMI App",style: TextStyle(fontSize: 28,fontWeight: FontWeight.w600,color: Colors.blue))),
                TextField(
                  keyboardType: TextInputType.phone,
                  controller:wtcontroller ,
                  decoration: InputDecoration(
                    label: Text("Enter your Weight in Kg"),
                    prefixIcon: Icon(Icons.line_weight),
                    iconColor: Colors.blue,
                  ),
                ),
                SizedBox(height: 15,),
                TextField(
                  keyboardType: TextInputType.phone,
                  controller:hfcontroller ,
                  decoration: InputDecoration(
                    label: Text("Enter your height in feet"),
                    prefixIcon: Icon(Icons.height),
                    iconColor: Colors.blue,
                  ),
                ),
                SizedBox(height: 15,),
                TextField(
                  keyboardType: TextInputType.phone,
                  controller:hicontroller ,
                  decoration: InputDecoration(
                    label: Text("Enter your height in inch"),
                    prefixIcon: Icon(Icons.height),
                    iconColor: Colors.blue,
                  ),
                ),
                SizedBox(height: 25,),
                ElevatedButton(onPressed: (){
                 var wt=wtcontroller.text.toString();
                 var ft=hfcontroller.text.toString();
                 var inch=hicontroller.text.toString();

                 if(wt!="" && ft!="" && inch!=""){
                var iwt=int.parse(wt);
                var ift=int.parse(ft);
                var iinch=int.parse(inch);

                var tInch=(ift*12)+iinch;
                var tcm=tInch*2.54;
                var tm=tcm/100;

                var bmi=iwt/(tm*tm);
                var msg="";
                if(bmi>25){
                   msg="You are overweight";
                  bgColor=Colors.orange.shade300;
                }
                else if(bmi<18)
                {
                   msg="you are underweight";
                  bgColor=Colors.red.shade400;
                }
                else{
                  msg="You are healthy";
                  bgColor=Colors.green.shade300;
                }

                setState(() {
                  result="$msg \n Your BMI is = $bmi";

                });
                 }
                 else{
                   setState(() {
                    result="PLease! fill up the columns";
                   });

                 }
                }, child: Text("Calculate")),
                SizedBox(height: 15,),
                Text(result,style: TextStyle(fontSize: 16),),


              ],
            ),
          ),
        ),
      )
    );
  }
}
